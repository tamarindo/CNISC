 /*
 * Form Layouts
 */
.vform
    display flex
    flex-flow column wrap
    justify-content space-between
    .form-field
        margin-bottom 1rem
        align-items center
        
    .distribute
        justify-content space-between
        
@media (min-width: 31.25em)
    .form-field .push-right
        width 78%
    .form-field > label
        width 22%
            
// Forma un input con un elemento en una sola linea
.input-inline-icon
    position relative
    input
        padding-right 36px
    .right
        absolute right 10px
        top 50%
        font-size 15px
        margin-top -8px
        
// Validaciones de Angular
input
    &.ng-touched.ng-invalid
        border-color #E75245

.validate
    .red
        color red
        
